{
  "extends": ["standard", "standard-react"],
  "parser": "babel-eslint",
  "rules": {
    "curly": ["error", "all"],
    "prefer-destructuring": ["error", {"object": true, "array": false}],
    "yoda": "error",
    "no-unreachable": "error",
    "no-alert": "error",
    "prefer-const": "error",
    "no-console": "error",
    "comma-dangle": ["warn", "always-multiline"],
    "object-curly-spacing": "warn"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": ["jest"],
  "env": {
    "jest/globals": true,
    "browser": true
  }
}
